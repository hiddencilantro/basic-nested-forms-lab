<%# <%= render 'form', recipe: @recipe %> %>

<%= form_for @recipe do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.fields_for :ingredients do |na| %>
        <%= na.label :name %>
        <%= na.text_field :name %>
        <br>
        <%= na.label :quantity %>
        <%= na.text_field :quantity %>
        <br>
    <% end %>
    <%= f.submit %>
<% end %>